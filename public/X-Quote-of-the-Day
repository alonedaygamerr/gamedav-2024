        const quoteElement = document.getElementById('quote');
        const alertElement = document.getElementById('alert');

        // Get today's date
        const today = new Date().toDateString();

        // Check if the user has already seen today's quote
        const savedDate = localStorage.getItem('quoteDate');
        const savedQuote = localStorage.getItem('quote');

        if (savedDate === today && savedQuote) {
            // If the quote for today was already seen, show the same quote
            quoteElement.textContent = savedQuote;
            alertElement.textContent = "You have already seen today's quote.";
        } else {
            // Show a new quote
            const quoteOfTheDay = quotes[new Date().getDate() % quotes.length]; // Rotating quotes

            // Save today's quote and date to localStorage
            localStorage.setItem('quoteDate', today);
            localStorage.setItem('quote', quoteOfTheDay);

            // Display the quote
            quoteElement.textContent = quoteOfTheDay;
        }
